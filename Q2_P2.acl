ip access-list extended SalesToAdmin
! UDP rules
 deny udp host 172.16.30.40 172.16.10.8 0.0.0.7
 deny udp host 172.16.30.40 host 172.16.10.16
 permit udp 172.16.30.0 0.0.0.63 172.16.10.8 0.0.0.7
 permit udp 172.16.30.0 0.0.0.63 host 172.16.10.16
 permit udp 172.16.30.0 0.0.0.255 host 172.16.10.8 eq 53
! TCP rules
 permit tcp any host 172.16.10.2 eq 443
 deny tcp any any eq 80
 deny tcp 172.16.30.0 0.0.0.255 172.16.10.0 0.0.0.63
 deny tcp 172.16.30.0 0.0.0.255 host 172.16.10.7 eq 25
 permit tcp 172.16.30.0 0.0.0.255 any
! ICMP rules
 permit icmp 172.16.30.0 0.0.0.255 any
! Allow Sales → Engineering
 permit ip 172.16.30.0 0.0.0.255 172.16.50.0 0.0.0.255
! Deny all other traffic
 deny ip 172.16.30.0 0.0.0.255 any
